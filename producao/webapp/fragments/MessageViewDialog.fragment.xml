<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog draggable="true"
        contentWidth="440px"
        contentHeight="320px"
        resizable="true"
        verticalScrolling="false"
        title="{i18n>messageViewDialogTitle}">
        <content>
            <MessageView items="{messages>/}">
                <MessageItem
                    type="{messages>type}"
                    title="{messages>title}"
                    description="{messages>description}">
                </MessageItem>
            </MessageView>
        </content>
        <buttons>
            <Button text="{i18n>close}" press=".onPressClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
